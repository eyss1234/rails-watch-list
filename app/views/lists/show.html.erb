<div class="container mt-5">
  <h2 style="color: white; font-weight: bold"><%= @list.name %></h2>
  
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card-product mb-3">
        <img src="https://image.tmdb.org/t/p/w500/<%= bookmark.movie.poster_url %>" />
        <div class="card-product-movie"> 
          <h2><%= bookmark.movie.title %></h2>
          <p><%= bookmark.movie.overview %></p>
          <p><%= bookmark.movie.rating %>/10</p>
          <p><em><i class="fa-solid fa-quote-left"></i> <%= bookmark.movie.bookmarks.sample.comment %> <i class="fa-solid fa-quote-right"></i></em></p>
        </div>
      </div>
    <% end %>

  <%= link_to "Back to Lists", lists_path %>
</div>
